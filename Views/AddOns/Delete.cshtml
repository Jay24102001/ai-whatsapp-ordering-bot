@model AiBotOrderingSystem.Models.DbFirst.Addon

@{
    ViewData["Title"] = "Delete Addon";
}

<h2>Delete Addon</h2>

<h4>Are you sure you want to delete this addon?</h4>

<div class="mb-3">
    <strong>Name:</strong> @Model.Name
</div>

<div class="mb-3">
    <strong>Price:</strong> @Model.Price
</div>

<div class="mb-3">
    <strong>Active:</strong> @(Model.IsActive == true ? "Yes" : "No")
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>