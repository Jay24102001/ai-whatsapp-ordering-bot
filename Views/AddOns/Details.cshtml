@model AiBotOrderingSystem.Models.DbFirst.Addon

@{
    ViewData["Title"] = "Addon Details";
}

<h2>Addon Details</h2>

<div class="card p-3">
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Price:</strong> @Model.Price.ToString("0.00")</p>
    <p><strong>Active:</strong> @(Model.IsActive == true ? "Yes" : "No")</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>