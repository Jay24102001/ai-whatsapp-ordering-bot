<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AiBotOrderingSystem</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f6f6f6;
        }

        /* LEFT SIDEBAR */
        .sidebar {
            width: 220px;
            background: #1f1f1f;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            color: white;
            padding-top: 20px;
            overflow-y: auto;
        }
        .sidebar a {
            display: block;
            color: #ddd;
            padding: 10px 18px;
            text-decoration: none;
            font-weight: 500;
        }
        .sidebar a:hover {
            background: #333;
            color: #ffcc00;
        }

        /* CONTENT AREA */
        .content-area {
            margin-left: 220px;
            padding: 20px;
            min-height: calc(100vh - 60px);
        }

        /* HEADER */
        .main-header {
            background: #1f1f1f;
            padding: 12px 0;
            margin-left: 220px;
        }
        .navbar-brand {
            font-size: 1.4rem;
            font-weight: bold;
            color: #ffcc00 !important;
        }
        .nav-link {
            color: #ffffff !important;
            font-weight: 500;
            margin: 0 12px;
        }
        .nav-link:hover {
            color: #ffcc00 !important;
        }

        /* FOOTER */
        footer {
            background: #1f1f1f;
            color: #ffffff;
            padding: 12px 0;
            margin-left: 220px;
        }
    </style>
</head>

<body>

   <!-- SIDEBAR -->
        <div class="sidebar">
            <h5 class="text-center mb-4" style="color:#ffcc00;">- JK Pizzeria -</h5>

            <a asp-controller="Orders" asp-action="Punch">Punch Order</a>
            <a asp-controller="Orders" asp-action="Index">All Orders</a>
            <a asp-controller="Orders" asp-action="Kitchen">Kitchen Live</a>

            <ul class="nav flex-column mt-3">

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle"
                    href="javascript:void(0)"
                    data-bs-toggle="dropdown">
                        Menu Settings
                    </a>

                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="MenuItems" asp-action="Index">Items</a></li>
                        <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Categories</a></li>
                        <li><a class="dropdown-item" asp-controller="Addons" asp-action="Index">Addons</a></li>
                    </ul>
                </li>

            </ul>
        </div>

    <!-- HEADER -->
    <header class="main-header">
        <nav class="navbar navbar-expand-sm navbar-dark container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                AI WhatsApp kiosk Ordering System
            </a>
        </nav>
    </header>

    <!-- MAIN BODY -->
    <main class="content-area">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer>
        <div class="container text-center">
            &copy; 2025 - JK Ordering System
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.9/signalr.min.js"></script>
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.9/signalr.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>