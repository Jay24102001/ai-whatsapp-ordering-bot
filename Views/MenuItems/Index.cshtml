@model IEnumerable<AiBotOrderingSystem.Models.DbFirst.MenuItem>

@{
    ViewData["Title"] = "Menu Items";
}

<h2 class="mb-3">Menu Items</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Item</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th style="width: 80px;">Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Available</th>
            <th>Addons</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Name" style="width:70px; height:70px; object-fit:cover; border-radius:5px;" />
                    }
                </td>

                <td>@item.Name</td>

                <td>@item.Category?.Name</td>

                <td>â‚¹@item.Price.ToString("0.00")</td>

                <td>@((item.IsAvailable ?? false) ? "Yes" : "No")</td>

                <td>
                    @string.Join(", ",
                        item.MenuItemAddons.Select(a => $"{a.Addon.Name} (+{a.Addon.Price})")
                    )
                </td>

                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>